{% extends 'layout.html.twig' %}

{% block body %}
	<div class="main container">
		<div class="row well">
			<div class="page-header">
				<h2> Nuevo Proyecto </h2>
			</div>
				{{ form_start(form, {'attr' : {'nombre' : 'form'} }) }}
				
				<div class="form-group">
					Nombre
					{{ form_widget(form.nombre, {'attr' : {'class' : 'form-control', 'placeholder' : 'Nombre del Proyecto'} }) }}
					<span class = "text-danger"> {{ form_errors(form.nombre) }} </span>
				</div>
				<div class="form-group">
					Descripción
					{{ form_widget(form.descripcion, {'attr' : {'class' : 'form-control', 'placeholder' : 'Descripción'} }) }}
					<span class = "text-danger"> {{ form_errors(form.descripcion) }} </span>
				</div>
				<div class="form-group">
					Requerimientos
					{{ form_widget(form.requerimientos, {'attr' : {'class' : 'form-control', 'placeholder' : 'Requerimientos'} }) }}
					<span class = "text-danger"> {{ form_errors(form.requerimientos) }} </span>
				</div>
				
				<p>{{ form_widget(form.guardar, {'label' : 'Guardar', 'attr' : {'class' : 'btn bt - success' }} ) }} 
				</p>
				
				{{ form_end(form) }}
		</div>
	</div>
{% endblock %}