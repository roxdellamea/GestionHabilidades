{% extends 'layout.html.twig' %}




{% block body %}
	<div class="main container">
		<div class="row well">
			<div class="page-header">
				<h2> Nuevo Profesional </h2>
			</div>
				{{ form_start(form, {'attr' : {'dni' : 'form'} }) }}
				
				<div class="form-group">
					Nombre
					{{ form_widget(form.nombre, {'attr' : {'class' : 'form-control', 'placeholder' : 'Nombre'} }) }}
					<span class = "text-danger"> {{ form_errors(form.nombre) }} </span>
				</div>
				<div class="form-group">
					Apellido
					{{ form_widget(form.apellido, {'attr' : {'class' : 'form-control', 'placeholder' : 'Apellido'} }) }}
					<span class = "text-danger"> {{ form_errors(form.apellido) }} </span>
				</div>
				<div class="form-group">
					DNI
					{{ form_widget(form.dni, {'attr' : {'class' : 'form-control', 'placeholder' : 'DNI'} }) }}
					<span class = "text-danger"> {{ form_errors(form.dni) }} </span>
				</div>
				<div class="form-group">
					Email
					{{ form_widget(form.email, {'attr' : {'class' : 'form-control', 'placeholder' : 'Email'} }) }}
					<span class = "text-danger"> {{ form_errors(form.email) }} </span>
				</div>
				<div class="form-group">
					Teléfono
					{{ form_widget(form.telefono, {'attr' : {'class' : 'form-control', 'placeholder' : 'Teléfono'} }) }}
					<span class = "text-danger"> {{ form_errors(form.telefono) }} </span>
				</div>
				<div class="form-group">
					LinkedIn
					{{ form_widget(form.linkedin, {'attr' : {'class' : 'form-control', 'placeholder' : 'Linkedin'} }) }}
					<span class = "text-danger"> {{ form_errors(form.linkedin) }} </span>
				</div>
				<div class="form-group">
					<br></br>
				</div>
				<div class="form-group">
					Calificacion
					{{ form_widget(form.califcompetencia) }}
					<span class = "text-danger"> {{ form_errors(form.califcompetencia) }} </span>
				</div>
				<br></br><br></br><br></br>

				<p>{{ form_widget(form.guardar, {'label' : 'Guardar', 'attr' : {'class' : 'btn bt - success' }} ) }} 
				</p>
				
				{{ form_end(form) }}
		</div>
	</div>
{% endblock %}